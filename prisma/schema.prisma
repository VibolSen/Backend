generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  HR
  TEACHER
  STUDENT
  STUDY_OFFICE
  FINANCE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum LeaveType {
  SICK
  CASUAL
  MATERNITY
  PATERNITY
  UNPAID
  OTHER
  RESIGNATION
}

enum ApplicationStatus {
  APPLIED
  REVIEWING
  INTERVIEWING
  OFFERED
  HIRED
  REJECTED
}

enum SubmissionStatus {
  PENDING
  SUBMITTED
  GRADED
}

enum ExamSubmissionStatus {
  PENDING
  SUBMITTED
  GRADED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum SessionStatus {
  ACTIVE
  CANCELLED
  RESCHEDULED
}

model Attendance {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  status    AttendanceStatus
  student   User      @relation(fields: [studentId], references: [id])
  studentId String    @db.ObjectId
  group     Group     @relation(fields: [groupId], references: [id])
  groupId   String    @db.ObjectId

  @@unique([date, studentId, groupId], name: "attendance_unique")
}

enum AcademicStatus {
  ACTIVE
  ON_LEAVE
  GRADUATED
  WITHDRAWN
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String @unique
  password  String
  role      Role   @default(STUDENT)
  isActive  Boolean @default(true)
  lastLogin DateTime?
  
  department   Department? @relation(fields: [departmentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  departmentId String?     @db.ObjectId

  groups           Group[]     @relation(fields: [groupIds], references: [id])
  groupIds         String[]    @db.ObjectId
  ledCourses       Course[]    @relation("CourseLead")
  headedDepartments Department[] @relation("DepartmentHead")
  headedFaculties   Faculty[]    @relation("FacultyHead") // New: User can head multiple faculties

  createdAssignments Assignment[] @relation("AssignmentsCreated")
  submissions        Submission[] @relation("SubmissionsMade")

  createdExams    Exam[]           @relation("ExamsCreated")
  examSubmissions ExamSubmission[] @relation("ExamSubmissionsMade")

  uploadedResources LibraryResource[] @relation("UploadedResources")

  // ✅ Back relation for Enrollment
  enrollments Enrollment[]
  attendances Attendance[]
  staffAttendances StaffAttendance[]

  createdSchedules           Schedule[] @relation("SchedulesCreated")
  schedulesAssignedToTeacher Schedule[] @relation("SchedulesAssignedToTeacher")

  profile   Profile?
  createdAnnouncements Announcement[] @relation("AnnouncementsCreated")
  jobPostings JobPosting[] @relation("JobPostingHiringManager")

  // Financial Management
  invoices    Invoice[]
  payrolls    Payroll[]
  benefits    UserBenefit?
  certificates Certificate[]
  
  auditLogs      AuditLog[]   @relation("ActorLogs")
  monitoredGroups Group[] @relation("GroupMonitor")
  notifications  Notification[]

  // Request & Approvals
  leaveRequests  LeaveRequest[]
  approvedLeaves LeaveRequest[] @relation("LeaveApprover")
}

model AuditLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  action    String   // e.g., "USER_DEACTIVATED", "PASSWORD_RESET"
  actorId   String   @db.ObjectId
  actor     User     @relation("ActorLogs", fields: [actorId], references: [id])
  target    String?  // e.g., "USER", "STUDENT"
  targetId  String?  // ID of the target entity
  details   String?  // JSON string or description
  timestamp DateTime @default(now())
}

model StaffAttendance {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  checkInTime  DateTime
  checkOutTime DateTime?
  status       AttendanceStatus
  lateMinutes  Int?
  note         String?
  user         User      @relation(fields: [userId], references: [id])
  userId       String    @db.ObjectId

  @@unique([checkInTime, userId], name: "staff_attendance_unique")
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  bio       String?
  avatar    String?
  address   String?
  phone     String?
  dateOfBirth DateTime?
  gender      String?
  
  // Academic Status
  academicStatus   AcademicStatus @default(ACTIVE)
  
  // Emergency Contact
  emergencyContactName     String?
  emergencyContactPhone    String?
  emergencyContactRelation String?

  // System IDs
  studentId String? // e.g., STU-2026-0001

  // Teacher/Staff Specifics
  specialization String[] // e.g. ["Mathematics", "Physics"]
  maxWorkload    Int?     // e.g. 5 courses per semester

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique @db.ObjectId
}

model SystemCounter {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  model     String @unique // e.g., "STUDENT"
  count     Int    @default(0)
  year      Int?   // To reset counters by year if needed
}

model LibraryResource {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  author          String
  coverImage      String
  uploadedBy      User    @relation("UploadedResources", fields: [uploadedById], references: [id])
  uploadedById    String  @db.ObjectId
  department      String?
  description     String?
  publicationYear Int?
  createdAt       DateTime @default(now())
  fileUrl         String?  // New: Store PDF/Doc link
}

model Department {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String   @unique
  departmentCourses CourseDepartment[]
  users   User[]
  head    User?    @relation("DepartmentHead", fields: [headId], references: [id])
  headId  String?  @db.ObjectId
  faculty   Faculty? @relation(fields: [facultyId], references: [id])
  facultyId String?  @db.ObjectId
  budgets   Budget[]
}

model Faculty {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String       @unique
  departments  Department[]
  head         User?        @relation("FacultyHead", fields: [headId], references: [id]) // New: Faculty can have a head
  headId       String?      @db.ObjectId
}

model Course {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String       @unique
  groups       Group[]      @relation("CourseToGroup", fields: [groupIds], references: [id])
  groupIds     String[]     @db.ObjectId
  leadBy       User?        @relation("CourseLead", fields: [leadById], references: [id])
  leadById     String?      @db.ObjectId
  code         String?      @unique
  credits      Int?         @default(3)
  description  String?

  // ✅ Back relation for Enrollment
  enrollments Enrollment[]
  courseDepartments CourseDepartment[]
  announcements Announcement[]
  certificates Certificate[] // New: Relation to Certificate model
  
  // ✅ New Relations for Assignment & Exam
  assignments Assignment[]
  exams       Exam[]
  schedules   Schedule[]
}

model Certificate {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  recipient   String
  course      Course    @relation(fields: [courseId], references: [id])
  courseId    String    @db.ObjectId
  issueDate   DateTime
  expiryDate  DateTime?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  template    Template? @relation(fields: [templateId], references: [id])
  templateId  String?   @db.ObjectId

  student     User?     @relation(fields: [studentId], references: [id])
  studentId   String?   @db.ObjectId
}

model Template {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  certificates Certificate[]
}

model Announcement {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course    Course   @relation(fields: [courseId], references: [id])
  courseId  String   @db.ObjectId

  author    User     @relation("AnnouncementsCreated", fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
}

model Group {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique

  courses    Course[] @relation("CourseToGroup", fields: [courseIds], references: [id])
  courseIds  String[] @db.ObjectId
  students   User[]   @relation(fields: [studentIds], references: [id])
  studentIds String[] @db.ObjectId
  
  monitor    User?    @relation("GroupMonitor", fields: [monitorId], references: [id])
  monitorId  String?  @db.ObjectId
  academicYear String?

  assignments Assignment[]
  exams       Exam[]
  attendances Attendance[]
  schedules   Schedule[] @relation("SchedulesAssignedToGroup")
}

enum AssignmentType {
  HOMEWORK
  PROJECT
  ESSAY
  PRESENTATION
  QUIZ
  OTHER
}

enum AssignmentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Assignment {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  dueDate     DateTime?
  
  // New Fields
  type        AssignmentType   @default(HOMEWORK)
  status      AssignmentStatus @default(DRAFT)
  weight      Float?           @default(0) // Contribution to final grade (e.g., 10%)
  maxPoints   Int?             @default(100)
  attachmentUrls String[]      // Links to files uploaded by teacher

  teacher     User         @relation("AssignmentsCreated", fields: [teacherId], references: [id])
  teacherId   String       @db.ObjectId
  
  group       Group        @relation(fields: [groupId], references: [id])
  groupId     String       @db.ObjectId

  course      Course?      @relation(fields: [courseId], references: [id])
  courseId    String?      @db.ObjectId

  submissions Submission[]
}

model Submission {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  content     String?
  fileUrls    String[] // New: Student file uploads
  submittedAt DateTime?
  grade       Int?
  feedback    String?
  
  isLate      Boolean  @default(false) // New: Automatic late flag

  status SubmissionStatus @default(PENDING)

  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  assignmentId String     @db.ObjectId
  student      User       @relation("SubmissionsMade", fields: [studentId], references: [id])
  studentId    String     @db.ObjectId

  @@unique([assignmentId, studentId])
}

enum ExamType {
  WRITTEN
  ORAL
  PRACTICAL
  ONLINE_QUIZ
  MIDTERM
  FINAL
}

enum ExamStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  GRADED
  CANCELLED
}

model Exam {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  
  // Revised Time Fields
  date        DateTime? // General date
  startTime   DateTime? // Specific start
  endTime     DateTime? // Specific end
  
  location    String?   // e.g., "Room 304"
  type        ExamType  @default(WRITTEN)
  status      ExamStatus @default(SCHEDULED)
  maxScore    Int?      @default(100)
  attachmentUrls String[]      // Links to files uploaded by teacher

  teacher     User             @relation("ExamsCreated", fields: [teacherId], references: [id])
  teacherId   String           @db.ObjectId
  
  group       Group            @relation(fields: [groupId], references: [id])
  groupId     String           @db.ObjectId

  course      Course?          @relation(fields: [courseId], references: [id])
  courseId    String?          @db.ObjectId

  submissions ExamSubmission[]
}

model ExamSubmission {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  content     String?
  fileUrls    String[] // New: For online exams requiring uploads
  submittedAt DateTime?
  grade       Int?
  feedback    String?

  status ExamSubmissionStatus @default(PENDING)

  exam      Exam   @relation(fields: [examId], references: [id], onDelete: Cascade)
  examId    String @db.ObjectId
  student   User   @relation("ExamSubmissionsMade", fields: [studentId], references: [id])
  studentId String @db.ObjectId

  @@unique([examId, studentId])
}

model Enrollment {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  student   User   @relation(fields: [studentId], references: [id])
  studentId String @db.ObjectId

  course   Course @relation(fields: [courseId], references: [id])
  courseId String @db.ObjectId

  progress Int @default(0) // 0–100 percentage

  @@unique([studentId, courseId])
}

model Session {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  startTime   DateTime
  endTime     DateTime
  status      SessionStatus @default(ACTIVE)
  schedule    Schedule  @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  scheduleId  String    @db.ObjectId
}

model Schedule {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  location    String?

  isRecurring Boolean   @default(false)
  startDate   DateTime? 
  endDate     DateTime? 
  daysOfWeek  String[] 

  creator     User      @relation("SchedulesCreated", fields: [creatorId], references: [id])
  creatorId   String    @db.ObjectId

  assignedToTeacher   User?   @relation("SchedulesAssignedToTeacher", fields: [assignedToTeacherId], references: [id])
  assignedToTeacherId String? @db.ObjectId

  assignedToGroup   Group?   @relation("SchedulesAssignedToGroup", fields: [assignedToGroupId], references: [id])
  assignedToGroupId String? @db.ObjectId

  course      Course?   @relation(fields: [courseId], references: [id])
  courseId    String?   @db.ObjectId

  sessions    Session[]
}

model CourseDepartment {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  courseId     String   @db.ObjectId
  departmentId String   @db.ObjectId

  course       Course   @relation(fields: [courseId], references: [id])
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([courseId, departmentId])
}


enum JobPostingStatus {
  OPEN
  CLOSED
  FILLED
}

model JobPosting {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  requirements String[]
  responsibilities String[]
  location    String
  department  String?
  salaryRange String?
  employmentType String
  applicationDeadline DateTime
  postedDate  DateTime  @default(now())
  status      JobPostingStatus @default(OPEN)
  hiringManagerId String? @db.ObjectId
  hiringManager User? @relation("JobPostingHiringManager", fields: [hiringManagerId], references: [id])
  applications JobApplication[]
}

model JobApplication {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  applicantName   String
  applicantEmail  String
  resume          String? // URL to the uploaded resume
  coverLetter     String? // URL to the uploaded cover letter
  appliedAt       DateTime     @default(now())
  jobPosting      JobPosting   @relation(fields: [jobPostingId], references: [id])
  jobPostingId    String       @db.ObjectId

  // Enhanced Candidate Info
  phone           String?
  qualification   String?
  experience      String?      // e.g., "5 years"
  skills          String[]
  status          ApplicationStatus @default(APPLIED)
}

model LeaveRequest {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  userId      String      @db.ObjectId
  user        User        @relation(fields: [userId], references: [id])
  type        LeaveType
  startDate   DateTime
  endDate     DateTime
  reason      String?
  status      LeaveStatus @default(PENDING)
  rejectionReason String?
  
  approvedById String?    @db.ObjectId
  approvedBy   User?      @relation("LeaveApprover", fields: [approvedById], references: [id], onDelete: NoAction, onUpdate: NoAction)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// Financial Management

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
  OTHER
}

model Fee {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String       @unique
  description String?
  amount      Float
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  invoiceItems InvoiceItem[]
}

model Invoice {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  student     User          @relation(fields: [studentId], references: [id])
  studentId   String        @db.ObjectId
  status      InvoiceStatus @default(DRAFT)
  issueDate   DateTime
  dueDate     DateTime
  totalAmount Float
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  items     InvoiceItem[]
  payments  Payment[]
}

model InvoiceItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
  invoiceId   String   @db.ObjectId
  fee         Fee      @relation(fields: [feeId], references: [id])
  feeId       String   @db.ObjectId
  description String
  amount      Float
}

model Payment {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  invoice       Invoice       @relation(fields: [invoiceId], references: [id])
  invoiceId     String        @db.ObjectId
  amount        Float
  paymentDate   DateTime
  paymentMethod PaymentMethod
  transactionId String?
  senderAccount String?   // To record Bakong ID / Bank Account
  senderName    String?   // To record the person who paid
  receiverAccount String? // New: To record school merchant account received
  notes         String?
  createdAt     DateTime      @default(now())
}

model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String?
  amount      Float
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   // e.g., "ASSIGNMENT", "GRADE", "EXAM", "ANNOUNCEMENT"
  isRead    Boolean  @default(false)
  link      String?  // Optional link to redirect user
  createdAt DateTime @default(now())
}

model UserBenefit {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique @db.ObjectId
  baseSalary    Float    @default(0)
  bonus         Float    @default(0)
  allowance     Float    @default(0)
  deduction     Float    @default(0)
  currency      String   @default("USD")
  updatedAt     DateTime @updatedAt
}

model Payroll {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @db.ObjectId
  amount        Float
  bonus         Float    @default(0)
  deduction     Float    @default(0)
  netSalary     Float
  status        String   @default("PENDING") // PENDING, PAID, CANCELLED
  paymentDate   DateTime?
  period        String   // e.g., "2024-03"
  transactionHash String? // For audit trail
  createdAt     DateTime @default(now())
}

model Budget {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  department    Department @relation(fields: [departmentId], references: [id])
  departmentId  String   @db.ObjectId
  amount        Float
  spent         Float    @default(0)
  period        String   // e.g., "2024"
  status        String   @default("ACTIVE") // ACTIVE, CLOSED
  items         BudgetItem[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BudgetItem {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  budget        Budget   @relation(fields: [budgetId], references: [id])
  budgetId      String   @db.ObjectId
  description   String
  amount        Float
  date          DateTime @default(now())
}
